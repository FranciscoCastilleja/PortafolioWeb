---
import '@fontsource-variable/raleway';

import { getI18N } from '../i18n/';
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale })
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={i18n.Description} />
		<meta name="viewport" content="width=device-width" />
		<meta property='og:title' content={i18n.Title} />
		<meta property='og:image' content='/media/Portafolio.webp' />
		<meta property='og:description' content={i18n.Description} />
		<meta property="og:image" content="https://example.com/imagen.jpg">
		<meta property="og:image:width" content="1200">
		<meta property="og:image:height" content="630">
		<meta property="og:type" content="website">
		<link rel="canonical" href="https://franciscocastilleja.vercel.app">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{i18n.Title}</title>
	</head>
	<body>
		<slot />
		<script src="../../node_modules/medium-zoom/dist/medium-zoom.min.js"></script>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Raleway Variable', sans-serif;
	}

	body {
		background-color: #121212;
	}
</style>

<script>
	import mediumZoom from 'medium-zoom';

	mediumZoom('.zoom', {
		margin: 50,
		background: '#000000af',
		scrollOffset: 100
	})
</script>