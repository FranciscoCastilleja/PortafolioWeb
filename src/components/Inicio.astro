---
import GitHubIcon from "./icons/GitHubIcon.astro";

import { getI18N } from '../i18n/';
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale })
---

<section class="grid mt-20 py-20 w-4/5 h-auto place-items-center">
    <img class="size-52 rounded-full object-cover" src="/media/foto.jpg" alt="Foto / Picture">
    <div class="mt-4 w-auto">
        <div class="grid place-items-center md:flex md:justify-center">
            <h1 class="text-center text-2xl font-bold md:px-1">Francisco Castilleja</h1>
            <span class="mt-2 bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300 md:ml-5 md:mt-0">{i18n.Span_Header_1}</span>
        </div>
        <h2 class="pt-3 w-full h-auto text-pretty text-center sm:h-auto md:text-base">{i18n.Paragraph_1}</h2>
        <h2 class="py-1 w-full h-auto text-pretty text-center sm:h-auto md:text-base">{i18n.Paragraph_2}</h2>
        <span class="flex py-1 justify-center">
            <a class="p-1 hover:scale-110" href="https://linkedin.com/in/francisco-castilleja" target="_blank" rel="noopener noreferrer">
                <svg width="25" height="25" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid" viewBox="0 0 256 256">
                    <path d="M218.123 218.127h-37.931v-59.403c0-14.165-.253-32.4-19.728-32.4-19.756 0-22.779 15.434-22.779 31.369v60.43h-37.93V95.967h36.413v16.694h.51a39.907 39.907 0 0 1 35.928-19.733c38.445 0 45.533 25.288 45.533 58.186l-.016 67.013ZM56.955 79.27c-12.157.002-22.014-9.852-22.016-22.009-.002-12.157 9.851-22.014 22.008-22.016 12.157-.003 22.014 9.851 22.016 22.008A22.013 22.013 0 0 1 56.955 79.27m18.966 138.858H37.95V95.967h37.97v122.16ZM237.033.018H18.89C8.58-.098.125 8.161-.001 18.471v219.053c.122 10.315 8.576 18.582 18.89 18.474h218.144c10.336.128 18.823-8.139 18.966-18.474V18.454c-.147-10.33-8.635-18.588-18.966-18.453" fill="#0A66C2"/>
                </svg>
            </a>
            <a class="p-1 hover:scale-110" href="https://github.com/FranciscoCastilleja" target="_blank" rel="noopener noreferrer">
                <GitHubIcon width="25" height="25"/>
            </a>
            <a class="p-1 font-semibold hover:scale-110" href=`${i18n.Link_Resume}`>Resume</a>
            <p class="hidden py-1 px-2 items-center text-white bg-gray-800 rounded-lg md:flex">
                Francisco_Castilleja@outlook.com
                <button class="p-1 pl-2 self-center" onclick="navigator.clipboard.writeText('Francisco_Castilleja@outlook.com')">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-copy" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#a905b6" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M7 7m0 2.667a2.667 2.667 0 0 1 2.667 -2.667h8.666a2.667 2.667 0 0 1 2.667 2.667v8.666a2.667 2.667 0 0 1 -2.667 2.667h-8.666a2.667 2.667 0 0 1 -2.667 -2.667z" />
                        <path d="M4.012 16.737a2.005 2.005 0 0 1 -1.012 -1.737v-10c0 -1.1 .9 -2 2 -2h10c.75 0 1.158 .385 1.5 1" />
                    </svg>
                </button>
            </p>
        </span>
        <span class="flex justify-center md:hidden">
            <p class="flex py-1 px-2 items-center text-white bg-gray-800 rounded-lg">
                Francisco_Castilleja@outlook.com
                <button class="p-1 pl-2 self-center" onclick="navigator.clipboard.writeText('Francisco_Castilleja@outlook.com')">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-copy" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#a905b6" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M7 7m0 2.667a2.667 2.667 0 0 1 2.667 -2.667h8.666a2.667 2.667 0 0 1 2.667 2.667v8.666a2.667 2.667 0 0 1 -2.667 2.667h-8.666a2.667 2.667 0 0 1 -2.667 -2.667z" />
                        <path d="M4.012 16.737a2.005 2.005 0 0 1 -1.012 -1.737v-10c0 -1.1 .9 -2 2 -2h10c.75 0 1.158 .385 1.5 1" />
                    </svg>
                </button>
            </p>
        </span>
    </div>
</section>