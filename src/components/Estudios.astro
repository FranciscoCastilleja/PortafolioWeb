---
import Section from "./Section.astro";
import EstudiosIcon from "./icons/EstudiosIcon.astro";
---

<Section id="estudios"> 
    <h2 class="flex pb-1 text-xl font-bold items-center gap-x-1">
        <EstudiosIcon class="fill-black dark:fill-white"/>
        Estudios y Certificaciones
    </h2>
    <div class="grid py-5 max-w-xl h-auto gap-y-3 place-items-center">
        <div class="block max-w-sm p-6 bg-gray-200 border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Universidad Autónoma de Tamaulipas</h5>
            <p class="font-normal text-gray-700 dark:text-gray-400">FMeISCdM</p>
            <p class="font-normal text-gray-700 dark:text-gray-400">Ingeniero en Sistemas Computacionales</p>
            <p class="font-normal text-gray-700 dark:text-gray-400">2019 - 2023 (Sin Título)</p>
        </div>    
    </div>
</Section>